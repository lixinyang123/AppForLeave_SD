<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.Configuration">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20,20,20,20">
            
            <Entry x:Name="student" Placeholder="你的姓名" />
            <Entry x:Name="teacher" Placeholder="辅导员姓名" />

            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="autoTime" VerticalOptions="Center" IsChecked="True" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Text="自动适配当前日期" VerticalOptions="Center"/>
            </StackLayout>

            <DatePicker x:Name="datePicker" IsVisible="False"/>

            <Button Text="确认" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>